{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a solid red border to all webpages matching mozilla.org.",
  "permissions": ["tabs",
				"storage"],
  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
	  
      "js": ["jquery-3.1.1.min.js", 
			"jquery-ui.min.js", 
			"browsergotchi.js"],
	  "css": [
			"browsergotchi.css", 
			"jquery-ui.min.css"]
    }
  ]

}